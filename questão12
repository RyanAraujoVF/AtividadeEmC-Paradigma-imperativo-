#include <stdio.h>

int main() {
    int segundos, horas, minutos, segundos_restantes;

    do {
        printf("Digite o tempo em segundos (n√£o pode ser negativo): ");
        scanf("%d", &segundos);
        if (segundos < 0) {
            printf("Por favor, insira um valor positivo.\n");
        }
    } while (segundos < 0);

    horas = segundos / 3600;
    segundos_restantes = segundos % 3600;
    minutos = segundos_restantes / 60;
    segundos_restantes = segundos_restantes % 60;

    printf("%d segundos equivalem a %d horas, %d minutos e %d segundos.\n", segundos, horas, minutos, segundos_restantes);

    return 0;
}
